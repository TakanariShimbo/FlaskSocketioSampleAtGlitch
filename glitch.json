{
    "install": "pip3 install --user -r requirements.txt",
    "start": "python3 app.py",
    "watch": {
      "ignore": [
        "\\.pyc$",
        "^node_modules/"
      ],
      "install": {
        "include": [
          "^requirements\\.txt$"
        ]
      },
      "restart": {
        "include": [
          "\\.py$",
          "\\.html$",
          "\\.css$",
          "^start\\.sh"
        ]
      },
      "throttle": 1000
    }
  }